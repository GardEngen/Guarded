<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.triga.guarded.AddUserActivity"
    tools:showIn="@layout/activity_add_user">

    <TextView
        android:text="Last name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstNameText"
        android:layout_alignStart="@+id/firstNameText"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/lastNameText"
        android:hint="Olsen" />

    <TextView
        android:text="Phone number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastNameText"
        android:layout_alignStart="@+id/lastNameText"
        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/phoneNumberText"
        android:hint="41761114"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginStart="17dp"
        android:id="@+id/firstNameText"
        android:hint="Tim"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:text="Repeat Password "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:hint="************"
        android:layout_below="@+id/Password"
        android:layout_alignStart="@+id/Password" />

    <TextView
        android:text="Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/guardianSwitch"
        android:layout_alignStart="@+id/guardianSwitch" />

    <Switch
        android:text="Guardian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guardianSwitch"
        android:layout_below="@+id/phoneNumberText"
        android:layout_alignStart="@+id/phoneNumberText" />

    <TextView
        android:text="Family code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView"
        android:id="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/firstNameText"
        android:id="@+id/familyCodeText"
        android:hint="123abc" />

    <TextView
        android:text="First name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:layout_below="@+id/familyCodeText"
        android:layout_alignStart="@+id/familyCodeText" />

    <Button
        android:text="Register User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/repeatPasswordText"
        android:layout_alignStart="@+id/repeatPasswordText"
        android:id="@+id/addUserbutton"
        android:layout_alignEnd="@+id/repeatPasswordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/repeatPasswordText"
        android:hint="************"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

</RelativeLayout>
